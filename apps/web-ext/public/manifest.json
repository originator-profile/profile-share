{
  "description": "Profile Web Extension",
  "manifest_version": 2,
  "name": "Profile Web Extension",
  "version": "1.0.0",
  "homepage_url": "https://originator-profile.pages.dev/",
  "icons": {
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "browser_action": {
    "default_icon": "icons/48x48.png",
    "default_title": "Profile Web Extension"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"],
      "css": ["content-script.css"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["http://*/*", "https://*/*", "activeTab"]
}
