{
  "name": "@webdino/profile-registry",
  "description": "Profile Registry API",
  "version": "0.0.0",
  "private": true,
  "bin": "bin/run",
  "files": [
    "bin",
    "dist",
    "oclif.manifest.json"
  ],
  "scripts": {
    "build": "run-s build:{ts,db,ui,cli,api} docs",
    "build:ts": "tsup src --clean",
    "build:db": "shx cp -r ../../packages/registry-db/prisma dist/",
    "build:ui": "run-s ui:{clean,install}",
    "build:cli": "oclif manifest",
    "build:api": "bin/run openapi-gen",
    "dev": "dotenv -e .env.development run-p dev:{db,build}",
    "dev:db": "run-p dev:db:*",
    "dev:db:up": "docker compose --env-file .env.development up db",
    "dev:db:gen": "yarn workspace @webdino/profile-registry-db dev",
    "dev:build": "tsup src --watch --onSuccess 'run-p dev:{ui,docs,start}'",
    "dev:ui": "run-s ui:{build,clean,install}",
    "dev:docs": "run-s build:{cli,api} docs",
    "dev:start": "npm start -- --seed --schema=../../packages/registry-db/prisma/schema.prisma",
    "ui:build": "yarn workspace @webdino/profile-registry-ui build",
    "ui:clean": "shx rm -rf dist/public",
    "ui:install": "shx cp -r ../../packages/registry-ui/dist dist/public",
    "docs": "run-p docs:*",
    "docs:cli": "oclif readme",
    "docs:api": "widdershins dist/openapi.json --omitHeader --language_tabs shell:Shell --outfile ../../docs/registry/assets/api.md",
    "docs:assets": "shx cp dist/openapi.json ../../docs/registry/assets/openapi.json",
    "e2e": "dotenv -e .env.development vitest --mode e2e run",
    "test": "vitest run",
    "lint": "eslint --fix .",
    "start": "bin/run start"
  },
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@prisma/client": "^3.14.0",
    "prisma": "^3.14.0"
  },
  "devDependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/basic-auth": "^4.0.0",
    "@fastify/cors": "^8.0.0",
    "@fastify/env": "^4.0.0",
    "@fastify/swagger": "^7.3.0",
    "@types/jsonld": "^1.5.6",
    "@types/serve-handler": "^6.1.1",
    "@webdino/profile-model": "*",
    "@webdino/profile-registry-db": "*",
    "@webdino/profile-registry-service": "*",
    "@webdino/profile-registry-ui": "*",
    "@webdino/profile-sign": "*",
    "@webdino/profile-tsconfig": "*",
    "ajv": "^8.11.0",
    "cross-fetch": "^3.1.5",
    "date-fns": "^2.28.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.16.0",
    "eslint-config-webdino-profile": "*",
    "fastify": "^4.0.3",
    "fastify-http-errors-enhanced": "^3.0.6",
    "json-schema-to-ts": "^2.5.3",
    "jsonld": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "oclif": "^3.0.1",
    "pino-pretty": "^8.0.0",
    "serve-handler": "^6.1.3",
    "shx": "^0.3.4",
    "stdout-stderr": "^0.1.13",
    "tsup": "^6.0.1",
    "typescript": "^4.7.2",
    "vitest": "^0.13.0",
    "widdershins": "^4.0.1"
  },
  "oclif": {
    "bin": "profile-registry",
    "commands": "dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  }
}
